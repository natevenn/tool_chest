<%= form_for(@tool) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.collection_select :category_id, @category, :id, :name, include_blank: true %>

  <%= f.submit %>
<% end %>
